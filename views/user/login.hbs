    <script>

        let form = document.getElementById("logForm");
        let button = document.getElementById("signIn");
        let display = document.getElementById("error");
       

        async function submitLogin() {
            const url = "`http://localhost:3000/user/login"
            let formData = new FormData()
            formData = form.value
            const login = await fetch(url, { method: "POST", body: formData })
            const response = await login.json()
            display.innerHTML = response.message
           
        }
         button.addEventListener("click",submitLogin)

