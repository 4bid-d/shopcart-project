<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="\stylesheets\style.css">
</head>


<body id="body">



  <section class="container mt-3 pt-5" id="home">
    <h1 class="mt-3">All products</h1>
    <hr>

    <div class="row" id="div1">
      {{#each Products}}
      <div class="col-lg-4 mt-4 flex justify-content-center text-center">
        <div class="container-fluid">
          <div class="card" id="cad{{this.number}}" style="width:20rem;hieght:8rem;">
            <section class="container-fluid"><img class="card-img-top p-3" style="width:18rem;hieght:auto;"
                src={{this.image}} alt="Card image cap"></section>
            <div class="card-body">
              <h5 class="card-title">{{this.productName}}</h5>
              <h6 class="card-title">{{this.Price}}</h6>
              <p class="card-text">{{this.desc}}</p>
              <a href={{#if notSignedUser}} "/user/login" {{else}} "/user/addToCart" {{/if}} class="btn btn-success">Add to cart</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}

    </div>





  </section>





</body>



</html>