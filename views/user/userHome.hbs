<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="\stylesheets\style.css">
</head>


<body id="body">



  <section class="container mt-3 pt-5" id="home">
    <div class="row col-lg-4">
      <h1 class="mt-3">All products</h1>
    <p id="display"style="color: green;"></p></div>
    <hr>

    <div class="row" id="div1">
      {{#each Products}}

      <div class="col-lg-4 mt-4 flex justify-content-center text-center">

        <div class="container-fluid">

          <div class="card" id="cad{{this.number}}" style="width:20rem;hieght:8rem;">
            <a target="" href="/images/{{this.imgId}}.jpg">
              <section class="container-fluid"><img class="card-img-top p-3" style="width:18rem;hieght:auto;"
                  src="/images/{{this.imgId}}.jpg" alt="{{this.productName}}"></section>
            </a></td>
              <div class="card-body">
            <a href="productView/{{this._id}}">
                <h5 class="card-title" style="color:black;">{{this.productName}}</h5>
                <h6 class="card-title" style="color:black;:hover{text-decoration: none; }">Rs:{{this.Price}}</h6>
            </a>
                <button onclick=addToCart("{{this._id}}") class="btn btn-success">Add to cart</button>
              </div>
          </div>
        </div>
      </div>

      {{/each}}

    </div>





  </section>

  <script>
    const display = document.getElementById('display')
    const addToCart = async (id)=>{
      const deleteProduct = await fetch(`http://localhost:3000/user/addToCart/${id}`,{method:"GET"})
      const response = await deleteProduct.json()
      //const popup = "<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"></button><div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"><div class="modal-dialog" role="document"><div class="modal-content"><div class="modal-header"><h5 class="modal-title" id="exampleModalLabel">Modal title</h5><button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button></div><div class="modal-body">...</div><div class="modal-footer"><button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button><button type="button" class="btn btn-primary">Save changes</button></div></div></div>}"
      display.innerHTML = response.message  
    }
    
  </script>



</body>



</html>