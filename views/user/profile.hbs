<section class="vh-100" style="background-color: #f4f5f7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3" style="border-radius: .5rem;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            {{!-- <img
                                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp" --}}
                                {{!-- alt="Avatar" class="img-fluid my-5" style="width: 80px;" /> --}}
                            <form action="/updateProfile" method="post">

                                <i class="far fa-edit mb-5"></i>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>User</h6>
                                        <h6>
                                            <p class="text-muted">{{userData.firstName}}{{userData.LastName}}</p>
                                        </h6>
                                        <hr>
                                    </div>
                                </div>

                                <h6>Address</h6>
                                {{#each userData.address}}
                                <p class="text-muted">{{this.address}}</p>
                                <p class="text-muted"> Pin : {{this.pin}}</p>
                                {{/each}}
                                <hr>

                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">{{userData.email}}</p>
                                        <hr>
                                    </div>
                                </div>

                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        {{#each userData.address}}

                                        <p class="text-muted">{{this.phone}}</p>
                                        {{/each}}
                                        <hr>
                                    </div>
                                </div>
                            </div>
                            <div><button type="submit" class="btn btn success">Update</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>