

<head>
  <title>{{title}}</title>
  <link rel="stylesheet" href="\stylesheets\style.css">
</head>


<body id="body">



  <section class="container mt-3 pt-5" id="home">
    <h1 class="mt-3">Cart</h1>
    <hr>

    <div class="row" id="div1">
      {{#each requestedUserCart}}
      <div class="col-lg-4 mt-4 flex justify-content-center text-center">
        <div class="container-fluid">
          <div class="card" id="cad{{this._id}}" style="width:20rem;hieght:8rem;">
            <section class="container-fluid"><img class="card-img-top p-3" style="width:18rem;hieght:auto;"
                src={{this.image}} alt="Card image cap"></section>
            <div class="card-body">
              <h5 class="card-title">{{this.productName}}</h5>
              <h6 class="card-title">{{this.Price}}</h6>
              <p class="card-text">{{this.desc}}</p>
              <a href="/user/checkOut/{{this._id}}" class="btn btn-success">Checkout</a>
              <a href="/user/removeCart/{{this._id}}" class="btn btn-danger">Remove</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}

    </div>


    <a href="/user" class="btn btn-success" style="float:right ;">Back</a>


  </section>





</body>


