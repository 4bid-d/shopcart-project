

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Signup Form</h3>
            <form method="post" action="/user/signup/signupData">

              <div><p style="color: green;font-size:large;">{{signInError}}</p></div>
              <div class="row">
                <div class="col-md-12 mb-4">

                  <div class="validationServer01">
                    <input name="fName"  placeholder="First Name" type="text" id="validationServer01" class="form-control form-control-lg" required/>
                  </div>

                </div>
                <div class="col-md-12 mb-4">

                  <div class="validationServer02">
                    <input type="text" placeholder="Last Name" name="lName" id="validationServer02" class="form-control form-control-lg" required/>

                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-12 mb-4 pb-2">

                  <div class="validationServer03">
                    <input type="email" name="email" placeholder="Email" id="validationServer03" class="form-control form-control-lg" required/>
                  </div>

                </div>
              </div>
              <div class="row">
                <div class="col-md-12 mb-4 pb-2">

                  <div class="validationServer05">
                    <input type="password" name="pass" placeholder="Password" id="validationServer04" class="form-control form-control-lg" required/>
                  </div>

                </div>
              </div>
            <div class="row">
                <div class="col-md-12 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
              </div>
            </div>
             <h6>Already a member? <a href="/user/login">login</a></h6>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>